<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="596.0" prefWidth="792.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.Controller1">
   <children>
      <TextField fx:id="searchTermTextField" layoutX="282.0" layoutY="72.0" prefHeight="25.0" prefWidth="247.0">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></TextField>
      <TextArea fx:id="resultTextArea" layoutX="9.0" layoutY="147.0" prefHeight="441.0" prefWidth="775.0">
         <font>
            <Font size="24.0" />
         </font></TextArea>
      <Button layoutX="539.0" layoutY="72.0" mnemonicParsing="false" onAction="#findButtonClicked" prefHeight="39.0" prefWidth="44.0">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@png-clipart-magnifying-glass-computer-icons-symbol-magnifying-glass-glass-cdr.png" />
               </image>
            </ImageView>
         </graphic></Button>
      <Label layoutX="83.0" layoutY="72.0" text="Tìm từ ở chỗ này">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <ListView fx:id="suggestionsListView" layoutX="282.0" layoutY="108.0" prefHeight="126.0" prefWidth="247.0" visible="false" />
      <Button fx:id="backButton" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#backButtonClicked" prefHeight="40.0" prefWidth="40.0">
         <graphic>
            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@5e3070255e90c71a48261dad292a2478.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <RadioButton fx:id="englishRadioButton" layoutX="83.0" layoutY="14.0" mnemonicParsing="false" text="Tìm từ tiếng Anh">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="lang" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="vietnameseRadioButton" layoutX="269.0" layoutY="14.0" mnemonicParsing="false" text="Tìm từ tiếng Việt" toggleGroup="$lang">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </RadioButton>
      <Button fx:id="speakButton" layoutX="722.0" layoutY="92.0" mnemonicParsing="false" onAction="#speakButtonClicked" prefHeight="50.0" prefWidth="50.0">
         <graphic>
            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Speaker_Icon.svg.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
