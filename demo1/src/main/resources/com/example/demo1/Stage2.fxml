<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="595.0" prefWidth="785.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.Controller2">
   <children>
      <TextField fx:id="keyTextField" layoutX="32.0" layoutY="213.0" prefHeight="25.0" prefWidth="247.0" />
      <TextField fx:id="searchTermTextField" layoutX="388.0" layoutY="117.0">
         <font>
            <Font size="15.0" />
         </font></TextField>
      <TextArea fx:id="resultTextArea" layoutX="32.0" layoutY="250.0" prefHeight="331.0" prefWidth="719.0">
         <font>
            <Font size="24.0" />
         </font></TextArea>
      <Button layoutX="587.0" layoutY="118.0" mnemonicParsing="false" onAction="#findButtonClicked" prefHeight="25.0" prefWidth="25.0">
         <graphic>
            <ImageView fitHeight="21.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@png-clipart-magnifying-glass-computer-icons-symbol-magnifying-glass-glass-cdr.png" />
               </image>
            </ImageView>
         </graphic></Button>
      <Label layoutX="95.0" layoutY="115.0" text="Tìm từ bạn cần ở chỗ này">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Button layoutX="293.0" layoutY="213.0" mnemonicParsing="false" onAction="#updateButtonClicked" text="Thêm/sửa từ này" />
      <Button fx:id="backButton" layoutX="14.0" layoutY="12.0" mnemonicParsing="false" onAction="#backButtonClicked" prefHeight="40.0" prefWidth="40.0">
         <font>
            <Font size="20.0" />
         </font>
         <graphic>
            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@5e3070255e90c71a48261dad292a2478.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button layoutX="408.0" layoutY="213.0" mnemonicParsing="false" onAction="#deleteButtonClicked" text="Xóa từ này" />
      <ListView fx:id="suggestionsListView" layoutX="408.0" layoutY="150.0" prefHeight="126.0" prefWidth="187.0" visible="false" />
      <RadioButton fx:id="englishRadioButton" layoutX="95.0" layoutY="74.0" mnemonicParsing="false" text="Sửa từ tiếng Anh">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="lang" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="vietnameseRadioButton" layoutX="293.0" layoutY="74.0" mnemonicParsing="false" text="Sửa từ tiếng Việt" toggleGroup="$lang">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </RadioButton>
   </children>
</AnchorPane>
